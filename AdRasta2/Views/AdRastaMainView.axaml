<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AdRasta2.Views.AdRastaMainView"
             xmlns:vm="clr-namespace:AdRasta2.ViewModels"
             xmlns:local="clr-namespace:AdRasta2.Converters"
             xmlns:views="clr-namespace:AdRasta2.Views"
             x:DataType="vm:AdRastaMainViewViewModel">

    <UserControl.Resources>
        <local:BoolToBrushConverter x:Key="BoolToBrushConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Top area -->
            <RowDefinition Height="*" /> <!-- Expansion area -->
            <RowDefinition Height="Auto" /> <!-- Bottom dock -->
        </Grid.RowDefinitions>

        <!-- ðŸ”¹ Fixed Header -->
        <Border DockPanel.Dock="Top" Background="#2A2A2A" Height="60">
            <TextBlock Text="Ad Rasta"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="24" />
        </Border>

        <!-- ðŸ”¹ Middle Shared Region -->
        <Border Grid.Row="1" Background="#F8F8F8">
            <views:SharedPanelView DataContext="{Binding SelectedConversion}" />
        </Border>

        <!-- ðŸ”¹ Bottom Preview Strip -->
        <Border Grid.Row="2" DockPanel.Dock="Bottom" Height="130" Background="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>150,*</Grid.ColumnDefinitions>
                <Button Content="New Conversion"
                        Command="{Binding AddNewConversion}"
                        Margin="10"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch" />
                <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding RastaConversions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="16,160,16" Margin="10,0,0,10">
                                    <!-- Left Sprocket -->
                                    <ItemsControl Grid.Column="0"
                                                  Background="{Binding IsSelected, Converter={StaticResource BoolToBrushConverter}, FallbackValue=Red}"
                                                  ItemsSource="{Binding $parent[UserControl].((vm:AdRastaMainViewViewModel)DataContext).LeftSprockets}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="3,0,3,0" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Rectangle Width="10" Height="7"
                                                           Fill="White"
                                                           RadiusX="1" RadiusY="1"
                                                           Margin="0,5,0,5" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Content -->
                                    <Button Grid.Column="1" MaxWidth="160" Margin="0"
                                            BorderThickness="0"
                                            CornerRadius="0"
                                            Padding="0 0 0 0"
                                            Background="{Binding IsSelected, Converter={StaticResource BoolToBrushConverter}, FallbackValue=Red}"
                                            Command="{Binding $parent[ItemsControl].((vm:AdRastaMainViewViewModel)DataContext).PanelClickedCommand}"
                                            CommandParameter="{Binding}">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                <Setter Property="Background" Value="LightBlue" />
                                            </Style>
                                        </Button.Styles>
                                        <StackPanel ToolTip.Tip="{Binding Title}">
                                            <Image Source="{Binding SourceImage}"
                                                   Height="80"
                                                   Width="160"
                                                   MaxWidth="160"
                                                   Stretch="Uniform"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,10,0,5" />
                                            <TextBlock Text="{Binding Title}"
                                                       Margin="0,0,0,10"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       FontSize="12"
                                                       TextTrimming="CharacterEllipsis" />
                                        </StackPanel>
                                    </Button>

                                    <!-- Right Sprocket -->
                                    <ItemsControl Grid.Column="2" 
                                                  Background="{Binding IsSelected, Converter={StaticResource BoolToBrushConverter}, FallbackValue=Red}"                                                  
                                                  ItemsSource="{Binding $parent[UserControl].((vm:AdRastaMainViewViewModel)DataContext).LeftSprockets}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" VerticalAlignment="Center" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Rectangle Width="10" Height="7"
                                                           Fill="White"
                                                           RadiusX="1" RadiusY="1"
                                                           Margin="0,5,0,5" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>