<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AdRasta2.ViewModels"
             xmlns:converters="clr-namespace:AdRasta2.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:AdRastaMainViewViewModel"
             x:Class="AdRasta2.Views.ConversionLogView">

    <UserControl.Resources>
        <converters:StatusToColourConverter x:Key="StatusToColourConverter" />
    </UserControl.Resources>

    <Border Background="#FDF6E3"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            HorizontalAlignment="Stretch"
            Margin="10,10,0,5">
        <Grid RowDefinitions="Auto,*">
            <TextBlock Grid.Row="0" Text="Log"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,8" />
            
            <ScrollViewer Grid.Row="1" x:Name="LogScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="140">
                <ItemsControl ItemsSource="{Binding SelectedConversion.Statuses}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Margin="2" ToolTip.Tip="{Binding Message}">
                                <Ellipse Width="8" Height="8"
                                         Fill="{Binding Status, Converter={StaticResource StatusToColourConverter}}"
                                         Margin="0,0,6,0"
                                         VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Message}"
                                           FontFamily="Georgia"
                                           FontSize="12"
                                           Foreground="#444" />
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>