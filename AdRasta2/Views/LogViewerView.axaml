<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AdRasta2.Views.LogViewerView"
             xmlns:converters="clr-namespace:AdRasta2.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:DataType="vm:LogViewerViewModel"
             xmlns:vm="clr-namespace:AdRasta2.ViewModels"
             xmlns:models="clr-namespace:AdRasta2.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450">

    <UserControl.Resources>
        <converters:StatusToColourConverter x:Key="StatusToColourConverter" />
    </UserControl.Resources>

    <Border Background="#FDF6E3"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            HorizontalAlignment="Stretch"
            Margin="10,10,0,5">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Copy All to Clipboard"
                          Command="{Binding  CopyLogToClipboardAsync}" />
            </ContextMenu>
        </Border.ContextMenu>
        <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*">
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="{Binding Title}"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,8" />

            <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="300">
                <ItemsControl ItemsSource="{Binding LogEntries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:StatusEntry">
                            <DockPanel Margin="2" ToolTip.Tip="{Binding Message}">
                                <Ellipse Width="8" Height="8"
                                         Fill="{Binding Status, Converter={StaticResource StatusToColourConverter}}"
                                         Margin="0,0,6,0"
                                         VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Message}"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Foreground="#444" />
                            </DockPanel>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
