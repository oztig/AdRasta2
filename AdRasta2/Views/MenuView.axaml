<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AdRasta2.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:AdRastaMainViewViewModel"
             x:Class="AdRasta2.Views.MenuView">

    <Menu DockPanel.Dock="Top"
          Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
          BorderBrush="{DynamicResource SystemControlForegroundBaseMediumHighBrush}"
          Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">

        <MenuItem Header="_Help">
            <MenuItem Header="_Show RastaConverter Help File" Command="{Binding ShowHelpCommand}" Margin="10,0,10,0" />
            <Separator />
            <MenuItem Header="_About" Command="{Binding ShowAboutCommand}" Margin="10,0,10,0" />
            <Separator />
            <MenuItem>
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                        <TextBlock Text="Debug" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <ToggleSwitch IsChecked="{Binding IsDebugEnabled, Mode=TwoWay}" />
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Header="View Application Log" 
                      Command="{Binding ShowApplicationLogCommand}" 
                      Margin="10,0,10,0" />
        </MenuItem>
        
        <MenuItem Header="_Settings">
            <MenuItem Header="_Edit INI Settings"
                      Command="{Binding ShowSettingsEditorCommand}"
                      Margin="10,0,10,0" />
            <MenuItem Header="_Reload INI Settings"
                      Command="{Binding ReloadInitSettings}"
                      Margin="10,0,10,0" />
        </MenuItem>


        <MenuItem Header="Theme">
            <MenuItem Header="Font Size">
                <MenuItem>
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                            <TextBlock Text="Size:" VerticalAlignment="Center" Margin="0,0,8,0" />
                            <Slider Minimum="6"
                                    Maximum="32"
                                    Width="120"
                                    Value="{Binding TempFontSize, Mode=TwoWay}"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Name="FontSizeSlider" />
                            <TextBlock Text="{Binding TempFontSize}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                            <Button Content="Apply"
                                    Command="{Binding ApplyFontSize}"
                                    Margin="8,0,0,0" />
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="Compact"
                      IsEnabled="False"
                      Command="{Binding SwitchThemeCommand}"
                      Margin="10,0,10,0"
                      CommandParameter="Compact" />
            <MenuItem Header="Dark"
                      Command="{Binding SwitchThemeCommand}"
                      IsEnabled="True"
                      Margin="10,0,10,0"
                      CommandParameter="Dark" />
            <MenuItem Header="Light"
                      Command="{Binding SwitchThemeCommand}"
                      IsEnabled="True"
                      Margin="10,0,10,0"
                      CommandParameter="Light" />
            <MenuItem Header="Default"
                      Command="{Binding SwitchThemeCommand}"
                      Margin="10,0,10,0"
                      CommandParameter="Default" />
        </MenuItem>

    </Menu>

</UserControl>