<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:views="clr-namespace:AdRasta2.Views"
             x:DataType="vm:AdRastaMainViewViewModel"
             xmlns:vm="clr-namespace:AdRasta2.ViewModels"
             xmlns:local="clr-namespace:AdRasta2.Converters"
             xmlns:enums="clr-namespace:AdRasta2.Enums"
             x:Class="AdRasta2.Views.SharedPanelView">

    <UserControl.Resources>
        <local:StatusToColourConverter x:Key="StatusToColourConverter" />
    </UserControl.Resources>

    <Border BorderThickness="1" BorderBrush="DarkGray" Margin="5" CornerRadius="5">
        <DockPanel LastChildFill="True">

            <!-- Fixed Top: Dual Mode Switcher -->
            <views:DualModeSwitchView DockPanel.Dock="Top" Margin="10,0" />

            <!-- Fixed Top: Image Settings -->
            <views:ImageSettingsView DockPanel.Dock="Top" Margin="10,0" />

            <!-- Fixed Bottom: Action Buttons -->
            <views:ActionButtonsView DockPanel.Dock="Bottom" Margin="10,0" />

            <!-- Scrollable Middle -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="5" RowSpacing="4" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                    <views:PreprocessSettings Grid.Row="0" />
                    <views:ConversionSettingsView Grid.Row="1" />
                    <views:ConfigSettingsView Grid.Row="2" />
                    <views:DualModeSettingsView Grid.Row="3" />
                    <views:CommandLineView Grid.Row="4" />
                </Grid>
            </ScrollViewer>

        </DockPanel>
    </Border>


</UserControl>