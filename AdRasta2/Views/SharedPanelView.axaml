<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:model="clr-namespace:AdRasta2.Models"
             x:DataType="model:RastaConversion"
             x:Class="AdRasta2.Views.SharedPanelView">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>*,*,*,*</Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="{Binding Title}" Margin="5" />
        <TextBox Grid.Row="1" Text="{Binding SourceImagePath}" Margin="5" />

        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Margin="5" HorizontalAlignment="Left" MaxWidth="324">
            <Image Source="{Binding SourceImage}" Margin="1" MaxWidth="320" MaxHeight="240" Stretch="Uniform" />
        </Border>

        <CheckBox Grid.Row="3" IsChecked="{Binding IsSelected}" Content="Selected" Margin="5" />
    </Grid>
</UserControl>