<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:views="clr-namespace:AdRasta2.Views"
             x:DataType="vm:AdRastaMainViewViewModel"
             xmlns:vm="clr-namespace:AdRasta2.ViewModels"
             xmlns:local="clr-namespace:AdRasta2.Converters"
             xmlns:enums="clr-namespace:AdRasta2.Enums"
             x:Class="AdRasta2.Views.SharedPanelView">

    <UserControl.Resources>
        <local:StatusToColourConverter x:Key="StatusToColourConverter" />
    </UserControl.Resources>

    <Border BorderThickness="1" BorderBrush="DarkGray" Margin="10" CornerRadius="5">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RowDefinitions="Auto,Auto,Auto,*,Auto"
              ColumnDefinitions="*,Auto">

            <!-- Dual Mode Switch -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,*" Margin=" 10,5,5,5" ColumnSpacing="5">
                <TextBlock Grid.Column="0"
                           Text="Dual Frame Mode"
                           VerticalAlignment="Center" />
                <ToggleSwitch Grid.Column="2"
                              IsChecked="{Binding  SelectedConversion.DualFrameMode}"
                              VerticalAlignment="Center" />
            </Grid>

            <!-- Images -->
            <views:ImageSettingsView  Grid.Row="1" />
            
            <views:ConversionSettingsView Grid.Row="2" />

            <!-- Dual Mode Expander -->
            <views:DualModeSettingsView Grid.Row="3" />
            
            <!-- Action Buttons -->
            <views:ActionButtonsView Grid.Row="4" />
            
        </Grid>
    </Border>
</UserControl>