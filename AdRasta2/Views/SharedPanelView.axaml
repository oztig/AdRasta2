<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:views="clr-namespace:AdRasta2.Views"
             x:DataType="vm:AdRastaMainViewViewModel"
             xmlns:vm="clr-namespace:AdRasta2.ViewModels"
             x:Class="AdRasta2.Views.SharedPanelView">

    <Border BorderThickness="1" BorderBrush="DarkGray" Margin="10" CornerRadius="5">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RowDefinitions="Auto,*,*,*,Auto,Auto">
            <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,*" Margin=" 10,5,5,5" ColumnSpacing="5">
                <TextBlock Grid.Column="0"
                           Text="Dual Frame Mode"
                           VerticalAlignment="Center" />
                <ToggleSwitch Grid.Column="2"
                              IsChecked="{Binding  SelectedConversion.DualFrameMode}"
                              VerticalAlignment="Center" />
            </Grid>
            <!-- <Border Grid.Row="1" BorderThickness="1" BorderBrush="DarkGray" Margin="5" CornerRadius="5"> -->
            <Grid Grid.Row="1" RowDefinitions="*,*" ColumnDefinitions="Auto,Auto,Auto,Auto,*">

                <!-- Source -->
                <HeaderedContentControl Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Header="Source"
                                        Margin="5,0,5,5">
                    <Grid RowDefinitions="*,Auto" ColumnDefinitions="*,Auto">
                        <Button Grid.Row="0" Grid.Column="0"
                                Command="{Binding SelectSourceImage}"
                                BorderBrush="Black"
                                BorderThickness="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Margin="0,0,0,3"
                                Padding="1"
                                Background="Black">
                            <Image Source="{Binding SelectedConversion.SourceImage}"
                                   MaxWidth="320"
                                   MaxHeight="240"
                                   ToolTip.Tip="{Binding SelectedConversion.SourceImagePath}"
                                   Stretch="Uniform">
                                <Image.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="H-Flip" Command="{Binding HFlipSourceImage}" />
                                    </ContextMenu>
                                </Image.ContextMenu>
                            </Image>
                        </Button>
                        <Grid Grid.Row="0" Grid.Column="1" RowDefinitions="*,Auto" RowSpan="2" Margin="0,0,0,0">
                            <Slider Orientation="Vertical"
                                    Minimum="0"
                                    Maximum="240"
                                    Value="{Binding SelectedConversion.Height}"
                                    VerticalAlignment="Stretch"
                                    ToolTip.Tip="Height"
                                    HorizontalAlignment="Center" />
                            <NumericUpDown Grid.Row="1" BorderThickness="0" Maximum="240" Minimum="0" Increment="1"
                                           Padding="1"
                                           TextAlignment="Center" ShowButtonSpinner="False"
                                           VerticalContentAlignment="Center"
                                           Value="{Binding SelectedConversion.Height}" Margin="0" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="0" ColumnDefinitions="Auto,*">
                            <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Resize Filter</Label>
                            <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" Margin="5,0,0,0"
                                      ItemsSource="{Binding   SourceData.ResizeFilters}"
                                      SelectedItem="{Binding  SelectedConversion.ResizeFilter}" />
                        </Grid>
                    </Grid>
                </HeaderedContentControl>

                <!-- Mask -->
                <HeaderedContentControl Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Header="Mask" Margin="5,0,5,5"
                                        IsVisible="{Binding SelectedConversion.IsSingleFrameMode}">
                    <Grid RowDefinitions="*,Auto">
                        <Button Grid.Row="0"
                                IsEnabled="{Binding SelectedConversion.IsSingleFrameMode}"
                                IsVisible="{Binding SelectedConversion.IsSingleFrameMode}"
                                Command="{Binding SelectSourceMask}"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,3"
                                Padding="1"
                                Background="Black"
                                BorderBrush="Black"
                                BorderThickness="1">
                            <Image Source="{Binding SelectedConversion.SourceImageMask}"
                                   MaxWidth="320"
                                   MaxHeight="240"
                                   Stretch="Uniform"
                                   ToolTip.Tip="{Binding SelectedConversion.SourceImageMaskPath}">
                                <Image.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="H-Flip" Command="{Binding HFlipMaskImage}" />
                                    </ContextMenu>
                                </Image.ContextMenu>
                            </Image>
                        </Button>
                        <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                            <Label Grid.Column="0" VerticalAlignment="Center">Strength</Label>
                            <NumericUpDown Grid.Column="1" Maximum="1000" Minimum="0" Increment="1"
                                           TextAlignment="Center"
                                           Margin="5,0,0,0"
                                           VerticalContentAlignment="Center"
                                           Value="{Binding SelectedConversion.MaskStrength}" />
                        </Grid>
                    </Grid>
                </HeaderedContentControl>

                <!-- Preview -->
                <HeaderedContentControl Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" Header="Preview"
                                        Margin="5,0,5,5">
                    <Border BorderBrush="Black"
                            BorderThickness="1"
                            HorizontalAlignment="Left"
                            Padding="1"
                            Background="Black"
                            Margin="5">
                        <Image Source="{Binding SelectedConversion.ImagePreview}"
                               MaxWidth="320"
                               MaxHeight="240"
                               Stretch="Uniform" />
                    </Border>
                </HeaderedContentControl>
            </Grid>
            <!-- </Border> -->

            <!-- Dual Mode Expander -->
            <Expander Grid.Row="4" Grid.Column="0"
                      Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                      HorizontalAlignment="Stretch" Header="Dual Frame Mode"
                      IsExpanded="{Binding SelectedConversion.DualFrameMode,Mode=OneWay}"
                      IsEnabled="{Binding SelectedConversion.DualFrameMode}">
                <Grid RowDefinitions="Auto" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10"
                      RowSpacing="10">
                    <HeaderedContentControl Grid.Row="0" Grid.Column="0" Header="First Steps">
                        <NumericUpDown HorizontalAlignment="Left" Minimum="0" Maximum="100000000"
                                       Increment="1" Value="{Binding SelectedConversion.FirstDualSteps}">
                        </NumericUpDown>
                    </HeaderedContentControl>
                    <HeaderedContentControl Grid.Row="0" Grid.Column="1" Header="After Steps">
                        <ComboBox ItemsSource="{Binding SourceData.AfterDualSteps}"
                                  SelectedItem="{Binding SelectedConversion.AfterDualSteps}"
                                  HorizontalAlignment="Stretch" />
                    </HeaderedContentControl>
                    <HeaderedContentControl Grid.Row="0" Grid.Column="2" Header="Altering Steps">
                        <NumericUpDown HorizontalAlignment="Left" Minimum="0" Maximum="100000000"
                                       Increment="1" Value="{Binding SelectedConversion.AlternatingDualSteps}">
                        </NumericUpDown>
                    </HeaderedContentControl>
                    <HeaderedContentControl Grid.Row="0" Grid.Column="3" Header="Blending">
                        <ComboBox ItemsSource="{Binding SourceData.DualBlending}"
                                  SelectedItem="{Binding SelectedConversion.DualBlending}"
                                  HorizontalAlignment="Stretch" />
                    </HeaderedContentControl>
                    <HeaderedContentControl Grid.Row="0" Grid.Column="4" Header="Luma">
                        <NumericUpDown HorizontalAlignment="Left" Minimum="0" Maximum="1"
                                       Increment="0.1" Value="{Binding SelectedConversion.DualLuma}">
                        </NumericUpDown>
                    </HeaderedContentControl>
                    <HeaderedContentControl Grid.Row="0" Grid.Column="5" Header="Chroma">
                        <NumericUpDown HorizontalAlignment="Left" Minimum="0" Maximum="1"
                                       Increment="0.1" Value="{Binding SelectedConversion.DualChroma}">
                        </NumericUpDown>
                    </HeaderedContentControl>
                </Grid>
            </Expander>
            <HeaderedContentControl Grid.Row="5" Grid.Column="0" Header="Generate">
                <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="15">
                    <Button Grid.Column="0" IsEnabled="{Binding SelectedConversion.CanProcess}">Preview</Button>
                    <Button Grid.Column="1" IsEnabled="{Binding SelectedConversion.CanProcess}">Convert</Button>
                    <Button Grid.Column="2">Create MCH</Button>
                    <Button Grid.Column="3">Create Executable</Button>
                    <Button Grid.Column="4" Command="{Binding ResetCurrentConversionValues }">Reset All Settings</Button>
                    <Button Grid.Column="5" Command="{Binding RemoveCurrentConversion }">Remove Conversion</Button>
                </Grid>
            </HeaderedContentControl>
        </Grid>
    </Border>
</UserControl>